<Window x:Class="WpfApp3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Nombre contacto:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtNombre" Width="200" Margin="0,0,10,0"/>

            <Label Content="Ciudad:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtCiudad" Width="200" Margin="0,0,10,0"/>

            <Button Content="Buscar" Click="BtnBuscar_Click" Width="100"/>
        </StackPanel>

        <DataGrid x:Name="dgProveedores" AutoGenerateColumns="True" IsReadOnly="True"/>
    </StackPanel>

</Window>
